{% extends 'base.html.twig' %}

{% block title %}Cancha index{% endblock %}

{% block body %}
    <h1>Cancha index</h1>
    <a href="{{ path('app_cancha_new') }}">Crear Cancha</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Club</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cancha in canchas %}
            <tr>
                <td>{{ cancha.id }}</td>
                <td>{{ cancha.nombre }}</td>
                <td>{{ cancha.club.nombre }}</td>
                <td>
                    <a href="{{ path('app_cancha_show', {'id': cancha.id}) }}">Consultar</a>
                    <a href="{{ path('app_cancha_edit', {'id': cancha.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
