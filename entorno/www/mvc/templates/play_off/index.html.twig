{% extends 'base.html.twig' %}

{% block title %}PlayOff index{% endblock %}

{% block body %}
    <h1>PlayOff index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Oro</th>
                <th>Plata</th>
                <th>Bronce</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for play_off in play_offs %}
            <tr>
                <td>{{ play_off.id }}</td>
                <td>{{ play_off.oro ? 'Yes' : 'No' }}</td>
                <td>{{ play_off.plata ? 'Yes' : 'No' }}</td>
                <td>{{ play_off.bronce ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_play_off_show', {'id': play_off.id}) }}">show</a>
                    <a href="{{ path('app_play_off_edit', {'id': play_off.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_play_off_new') }}">Create new</a>
{% endblock %}
