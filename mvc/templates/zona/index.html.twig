{% extends 'base.html.twig' %}

{% block title %}Zona index{% endblock %}

{% block body %}
    <h1>Zona index</h1>
    <a href="{{ path('app_zona_new') }}">Crear Zona</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for zona in zonas %}
            <tr>
                <td>{{ zona.id }}</td>
                <td>
                    <a href="{{ path('app_zona_show', {'id': zona.id}) }}">Consultar</a>
                    <a href="{{ path('app_zona_edit', {'id': zona.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
